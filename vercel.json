{
  "builds": [
    { "src": "react-app/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js?path=/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
